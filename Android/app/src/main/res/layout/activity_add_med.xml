            android:layout_marginTop="20dp"
            android:text="Extra message :"
            android:textColor="#1f9c62"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/extramessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
